<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <ImageView
        android:id="@+id/bankImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:padding="@dimen/isw_content_small_padding"
        android:background="@drawable/isw_bg_card"
        tools:src="@drawable/isw_bank_placeholder" />

    <TextView
        android:id="@+id/bankName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/isw_content_mid_margin"
        android:layout_gravity="center"
        android:textSize="17sp"
        tools:text="GT Bank" />
</LinearLayout>