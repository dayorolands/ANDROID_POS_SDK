<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertCardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/isw_container_margin"
    android:orientation="vertical">

    <!-- change payment button -->
    <include
        layout="@layout/isw_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/isw_container_margin"
        android:layout_marginEnd="@dimen/isw_container_margin"
        android:layout_marginTop="@dimen/isw_container_margin"
        android:layout_marginBottom="@dimen/isw_container_margin"
        />


    <TextView
        android:id="@+id/insertCardHintTitle"
        style="@style/ISW.PaymentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/isw_content_mid_margin"
        android:layout_marginBottom="@dimen/isw_content_mid_margin"
        android:gravity="center_horizontal"
        android:text="Insert Supervisor Card"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/insertCardImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/isw_content_margin"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/isw_ic_insert_card" />

    <TextView
        android:id="@+id/insertCardHint"
        style="@style/ISW.SubTitle"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"

        android:layout_marginTop="@dimen/isw_content_margin"
        android:layout_marginStart="@dimen/isw_container_margin"
        android:layout_marginEnd="@dimen/isw_container_margin"
        android:lineSpacingExtra="5dp"

        android:text="Insert the supervisor card to be configured"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/btnContinueRefund"
        style="@style/ISW.Button"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/isw_container_margin"
        android:layout_marginStart="@dimen/isw_container_margin"
        android:layout_marginEnd="@dimen/isw_container_margin"
        app:cardBackgroundColor="@color/iswColorPrimary"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/isw_corner_radius"
        tools:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnConfirmText"
                style="@style/ISW.ButtonText"
                android:layout_width="wrap_content"
                android:text="Process Refund" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>

